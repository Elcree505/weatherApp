# Editor configuration, see http://editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Windows
[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{js,jsx,ts,tsx,vue,html,css,scss,json,yml,md}]
quote_type = single
indent_size = 2

[*.json]
indent_size = 2
